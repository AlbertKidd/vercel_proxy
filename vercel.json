{
    "redirects": [
        { 
            "source": "/chat",
            "destination": "https://chat-gpt-next-pearl-theta.vercel.app"
        },
        { 
            "source": "/chat/:match*",
            "destination": "https://chat-gpt-next-pearl-theta.vercel.app/:match*"
        }
    ],
    "rewrites": [
        { 
            "source": "/wechat:match*",
            "destination": "https://sflet7.laf.run/wechatGPT:match*"
        },
        { "source": "/openai", "destination": "https://api.openai.com" },
        { "source": "/openai/:match", "destination": "https://api.openai.com/:match" },
    ],
    "github": {
        "silent": true
    }
}
